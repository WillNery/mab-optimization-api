# ===========================================
# Multi-Armed Bandit API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp env.example .env

# -------------------------------------------
# Snowflake Connection (Required)
# -------------------------------------------
SNOWFLAKE_ACCOUNT=xxx.us-east-1
SNOWFLAKE_USER=mab_user
SNOWFLAKE_PASSWORD=your_password_here
SNOWFLAKE_WAREHOUSE=compute_wh
SNOWFLAKE_DATABASE=activeview_mab
SNOWFLAKE_SCHEMA=experiments

# -------------------------------------------
# API Configuration
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -------------------------------------------
# Algorithm Parameters
# -------------------------------------------
# Janela padrão de análise (dias)
DEFAULT_WINDOW_DAYS=14

# Janela máxima quando dados insuficientes (dias)
MAX_WINDOW_DAYS=30

# Mínimo de impressões por variante para usar dados reais
MIN_IMPRESSIONS=10000

# Número de simulações Monte Carlo
THOMPSON_SAMPLES=10000

# Prior Beta distribution (fallback quando sem dados)
# Prior = Beta(1, 99) → CTR esperado ~1%
PRIOR_ALPHA=1
PRIOR_BETA=99

# -------------------------------------------
# Logging
# -------------------------------------------
# Níveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_MAX=100
RATE_LIMIT_DEFAULT_WINDOW=60
